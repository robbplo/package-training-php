{
    "name": "robbin/temperature-conversion",
    "description": "",
    "homepage": "https://github.com/robbplo/package-training-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Robbin Ploeger",
            "email": "robbin@smit.net",
            "homepage": "https://smit.net",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^9.0",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Robbplo\\UnitConversions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Robbplo\\UnitConversions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
